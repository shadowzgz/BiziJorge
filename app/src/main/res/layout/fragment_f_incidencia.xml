<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.fIncidencia">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">


        <TextView
            android:id="@+id/nuevaIncidencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nueva incidencia"
            android:textSize="24sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/userEmailIncidencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="Email" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/asuntoIncidencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="Asunto" />
        </android.support.design.widget.TextInputLayout>


            <EditText
                android:id="@+id/textoIncidencia"
                android:layout_width="match_parent"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:layout_height="198dp"
                android:hint="Detalle su problema..."
                android:scrollbars="vertical"
                android:inputType="textMultiLine"/>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_sendIncidencia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:text="Mandar incidencia" />

        <TextView
            android:id="@+id/tvListadoIncidencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver listado de incidencias"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>

    </ScrollView>

</FrameLayout>